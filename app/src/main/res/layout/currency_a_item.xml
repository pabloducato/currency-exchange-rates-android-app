<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/currency_a_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:tint="@color/old_gold" />

        <TextView
            android:id="@+id/currency_a_rate_abbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/currency_a_image_view"
            android:layout_toRightOf="@+id/currency_a_image_view"
            android:text="Line 1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currency_a_rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currency_a_rate_abbreviation"
            android:layout_alignStart="@+id/currency_a_rate_abbreviation"
            android:layout_alignLeft="@+id/currency_a_rate_abbreviation"
            android:layout_alignParentTop="false"
            android:text="999"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currency_a_rate_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currency_a_rate_value"
            android:layout_alignStart="@+id/currency_a_rate_value"
            android:layout_alignLeft="@+id/currency_a_rate_value"
            android:layout_alignParentTop="false"
            android:text="Line 2"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currency_a_rate_big_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/currency_a_rate_description"
            android:layout_alignLeft="@+id/currency_a_rate_description"
            android:layout_alignBottom="@+id/currency_a_rate_description"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="999"
            android:textColor="@color/dark_green"
            android:textSize="36sp"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>