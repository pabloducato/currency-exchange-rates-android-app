<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/panelBackground"
    app:cardCornerRadius="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/panelBackground">

        <ImageView
            android:id="@+id/author_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/image"
            android:padding="2dp"
            app:tint="@color/imageItemColor" />

        <TextView
            android:id="@+id/author_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/author_image_view"
            android:text="Title"
            android:textColor="@color/tabColor1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_title"
            android:layout_alignStart="@+id/author_title"
            android:layout_alignParentTop="false"
            android:text="Description"
            android:textColor="@color/tabColor1"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/author_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_description"
            android:layout_alignStart="@+id/author_description"
            android:layout_alignParentTop="false"
            android:autoLink="all"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:text="Link"
            android:textColor="@color/tabColor1"
            android:textSize="12sp"
            android:textStyle="italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>