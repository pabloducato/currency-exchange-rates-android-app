<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/panelBackground"
    app:cardCornerRadius="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/panelBackground">

        <ImageView
            android:id="@+id/crypto_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/image"
            android:padding="2dp"
            app:tint="@color/old_gold" />

        <TextView
            android:id="@+id/crypto_rate_abbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/crypto_image_view"
            android:text="Line 1"
            android:textColor="@color/tabColor1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/crypto_rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crypto_rate_abbreviation"
            android:layout_alignStart="@+id/crypto_rate_abbreviation"
            android:layout_alignParentTop="false"
            android:text="999"
            android:textColor="@color/tabColor1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/crypto_rate_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crypto_rate_value"
            android:layout_alignStart="@+id/crypto_rate_value"
            android:layout_alignParentTop="false"
            android:text="Line 2"
            android:textColor="@color/tabColor1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/crypto_rate_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/crypto_rate_description"
            android:layout_alignBottom="@+id/crypto_rate_description"
            android:layout_marginStart="110dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="999"
            android:textColor="@color/dark_green"
            android:textSize="36sp"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>