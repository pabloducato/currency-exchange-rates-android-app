<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/button_background_backend"
    app:cardBackgroundColor="@color/panelBackground"
    app:cardCornerRadius="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/panelBackground">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:tint="@color/imageItemColor" />

        <TextView
            android:id="@+id/rate_abbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_view"
            android:layout_toRightOf="@+id/image_view"
            android:text="Line 1"
            android:textColor="@color/tabColor1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate_abbreviation"
            android:layout_alignStart="@+id/rate_abbreviation"
            android:layout_alignLeft="@+id/rate_abbreviation"
            android:layout_alignParentTop="false"
            android:text="999"
            android:textColor="@color/tabColor1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate_value"
            android:layout_alignStart="@+id/rate_value"
            android:layout_alignLeft="@+id/rate_value"
            android:layout_alignParentTop="false"
            android:text="Line 2"
            android:textColor="@color/tabColor1"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>